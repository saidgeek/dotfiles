alias v="nvim"
alias z="nvim ~/.zshrc"
alias soz="source ~/.zshrc"

alias gaa="git add ."
alias gs="git status"
alias gl="git log --oneline"

alias l="exa -1 -G --icons -a -s=type --colour=always -H -I '.git|node_modules'"
alias lt="l -T -L 1"
alias lt2="l -T -L 2"
alias lt3="l -T -L 3"
alias lt4="l -T -L 4"
