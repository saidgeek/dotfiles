# alias l="ls -la"
alias v="nvim"
alias z="nvim ~/.zshrc"
alias soz="source ~/.zshrc"

alias gaa="git add ."
alias gs="git status"
alias gl="git log --oneline"
alias gc="git commit"
alias gcm="git commit -m"
alias gca="git commit --amend"
alias gr="git rebase"
alias gri="git rebase -i"

alias l="exa -G --icons -a -s=type --colour=always -H -I '.git|node_modules'"
alias lt="l -T -L 1"
alias lt2="l -T -L 2"
alias lt3="l -T -L 3"
alias lt4="l -T -L 4"
